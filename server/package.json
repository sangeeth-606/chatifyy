  "keywords": [],
  "description": "",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.11.24",
    "@types/socket.io": "^3.0.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@prisma/client": "5.10.2",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.18.2",
    "nodemon": "3.1.0",
    "prisma": "5.10.2",
    "socket.io": "4.7.4"
  }
}
